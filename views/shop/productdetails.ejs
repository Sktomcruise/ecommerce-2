    <div class="col-md-5 mt-2 mr-2 ml-auto">
      <img
        src="<%=product.image%>"
        class="img-fluid product-img"
        alt="product image"
      />
    </div>
    <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
      <form action="/carts/add-to-cart/<%=product._id%>" method="POST">
      <p style="text-transform: uppercase;"><strong><%=product.title%></strong></p>
      <hr />
      <p class="price">Rupee â‚¹<%=product.price%></p>
      <p class="lead"> Description: 
        <p><%=product.description%></p>
      </p>
      <p><strong>Category:</strong> <%=product.categories%></p>
      <p><strong>Size:</strong> <%=product.size%></p>
      <p><strong>Color:</strong> <%=product.color%></p>
      <p class="is-available">In stock</p>
      <input type="button" onclick="decrementValue()" value="-" />
      <input type="text" name="quantity" value=" <%= product.quantity%>" maxlength="2" max="10" size="1" id="number" />
      <input type="button" onclick="incrementValue()" value="+" />
      <script type="text/javascript">
        function incrementValue()
        {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            if(value<10){
                value++;
                    document.getElementById('number').value = value;
            }
        }
        function decrementValue()
        {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            if(value>1){
                value--;
                    document.getElementById('number').value = value;
            }
        
        }
        </script>
  
      <button class="btn btn-block btn-secondary mt-3 mb-3 button-style">
        Add to Shopping Cart
      </button>
      <!-- <label>Qty:
            <input type="number" name="qty" required max="5" min="1">
          </label> -->
    </form>
    </div>
    </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>
