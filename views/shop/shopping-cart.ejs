<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bag Source</title>

  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container">
    <header>
      <a href="/logout">Logout</a>
    </header>
    
    <div class="row mt-4 mb-4">
      <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
          <table>
            <thead>
              <tr>
                <th>Product</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>    
                <th>Quantity </th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>    
                <th>Price</th>
                
              </tr>
            </thead>
            <form action="/orders/" method="POST">
            <tbody>
              <% cart.products.forEach(function(product) { %>
                <tr>
                 
                 <td>
                  <img src="<%=product.image%>" class="img-small image-fluid" alt="image thumbnail" height="5%" />
                </td>
                  <td>
                    <%= product.title%>
                  </td>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th> 
                  <!-- <td class="text-center">
                    <a href="/carts/add-to-cart/<%=product._id%>"><i style="font-size:24px" class="fa">&#xf067;</i> </a>
                  </td>      -->
                  <td>
                    <p> 
                      <input id=demoInput type=number min=1 max=110>
                      <button onclick="increment()">+</button>
                      <button onclick="decrement()">-</button>
                      <script>
                         function increment() {
                            document.getElementById('demoInput').stepUp();
                         }
                         function decrement() {
                            document.getElementById('demoInput').stepDown();
                         }
                      </script>
                      <%= product.quantity%>
                      <a href="#">
                        <span class="glyphicon glyphicon-minus-sign"></span>
                      </a>
                    </p>
                   
                   
                  </td>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                  <td>
                    <%= product.price%>
                  </td>
                </tr>
                <% }) %>
                <td>
                  <button class="btn btn-block btn-secondary mt-3 mb-3 button-style">
                   order
                  </button>
              </td>
              <div class="col-md-12">
                <div class="form-group">
                  <label for="username">username</label>
                  <input type="text" id="username" class="form-control" required="" name="username">
                </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" class="form-control" required="" name="address">
          </div>
          <div class="form-group">
            <label for="phoneno">phoneno</label>
            <input type="number" id="phoneno" class="form-control" required="" name="phoneno">
          </div>
         
        </div>
            </tbody>
          </form>
            
         
          </table>
          
            
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>